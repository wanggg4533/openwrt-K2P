CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

# LuCI web interface
CONFIG_PACKAGE_luci=y

# Network essentials
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables=y
CONFIG_PACKAGE_iptables-mod-conntrack-extra=y

# SSH server (dropbear)
CONFIG_PACKAGE_dropbear=y
CONFIG_DROPBEAR_ECC=y

# ttyd - Web terminal
CONFIG_PACKAGE_luci-app-ttyd=y

# OpenClash - GUI for Clash
CONFIG_PACKAGE_luci-app-openclash=y

# DDNS plugins
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts_dnspod=y
CONFIG_PACKAGE_ddns-scripts_aliddns=y

# MWAN3 - multi-WAN and load balancing
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_mwan3=y

# Traffic monitoring and balancing
CONFIG_PACKAGE_luci-app-nlbwmon=y
CONFIG_PACKAGE_luci-app-qos=y

# Adblock
CONFIG_PACKAGE_luci-app-adblock=y

# LuCI package management
CONFIG_PACKAGE_luci-app-opkg=y

# uHTTPd web server
CONFIG_PACKAGE_uhttpd=y

# SFTP support
CONFIG_PACKAGE_openssh-sftp-server=y

# Other useful tools
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y

# Include Luci themes
CONFIG_PACKAGE_luci-theme-bootstrap=y

# IPv6 support (optional)
CONFIG_PACKAGE_ip6tables=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y

# Required to enable Luci for firewall and base services
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-base-files=y
